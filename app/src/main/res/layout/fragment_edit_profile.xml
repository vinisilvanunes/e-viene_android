<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">


    <ImageButton
        android:id="@+id/img_edit_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:scaleType="centerCrop"
        android:src="@drawable/baseline_account_circle_24"
        android:contentDescription="Imagem de perfil" />

    <TextView
        android:id="@+id/lbl_edit_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Username"
        android:textSize="16sp"
        android:textStyle="bold" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:labelFor="@+id/txtNome"
        android:text="Nome:"
        android:layout_marginBottom="-10dp"
        android:textColor="#000000"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/txt_edit_name"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="10dp"
        tools:ignore="SpeakableTextPresentCheck" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:labelFor="@+id/txtNome"
        android:text="Nome de UsuÃ¡rio:"
        android:layout_marginBottom="-10dp"
        android:textColor="#000000"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/txt_edit_username"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="10dp"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:labelFor="@+id/txtNome"
        android:text="Biografia:"
        android:layout_marginBottom="-10dp"
        android:textColor="#000000"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/txt_edit_bio"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="10dp"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/lbl_edit_bd"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:labelFor="@+id/txtNome"
        android:text="Data de Nascimento:"
        android:textColor="#000000"
        android:layout_marginBottom="-10dp"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/txt_edit_birthdate"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/btn_edit_save"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:backgroundTint="@color/azulEviene"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:text="Salvar" />

    <TextView
        android:id="@+id/lbl_delete_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:text="EXCLUIR CONTA"
        android:textColor="@android:color/holo_red_dark" />
</LinearLayout>