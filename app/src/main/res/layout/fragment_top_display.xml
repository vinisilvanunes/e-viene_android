<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".TopDisplayFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/fotoPerfilTopDisplay"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="start"
            android:backgroundTint="#FFFFFF"
            android:contentDescription="Foto do usuário logado"
            android:scaleType="fitXY"
            android:clickable="true"
            android:src="@drawable/baseline_account_circle_24"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/logoTopDisplay"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:backgroundTint="#00FFFFFF"
            android:importantForAccessibility="no"
            android:scaleType="centerCrop"
            android:src="@mipmap/logo_eviene_full"
            app:layout_constraintLeft_toLeftOf="@id/fotoPerfilTopDisplay"
            app:layout_constraintRight_toRightOf="@id/configuracaoTopDisplay"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/configuracaoTopDisplay"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="end"
            android:backgroundTint="#FFFFFF"
            android:contentDescription="Configurações"
            android:src="@drawable/baseline_settings_24"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>