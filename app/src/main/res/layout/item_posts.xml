<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_Foto"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="15"
                android:scaleType="centerCrop"
            />

            <TextView
                android:id="@+id/txt_Nome"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="75"
            />

            <ImageButton
                android:id="@+id/imgConfig"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="10"
                android:contentDescription="Options"
                android:src="@drawable/baseline_more_vert_24"
                tools:src="@drawable/baseline_more_vert_24"
            />

        </LinearLayout>

        <TextView
            android:id="@+id/txt_Texto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/img_Image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:maxHeight="220dp"
        />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="100">

            <ImageButton
                android:id="@+id/btnLike"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="12"
                android:contentDescription="Like"
                android:src="@drawable/baseline_thumb_up_24"
                tools:src="@drawable/baseline_thumb_up_24" />

            <ImageButton
                android:id="@+id/btnComment"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="12"
                android:contentDescription="Comment"
                android:src="@drawable/baseline_comment_24"
                tools:src="@drawable/baseline_comment_24" />

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="52"
                />

            <ImageButton
                android:id="@+id/btnInfo"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="12"
                android:contentDescription="Info"
                android:src="@drawable/baseline_info_outline_24"
                tools:src="@drawable/baseline_info_outline_24" />

            <ImageButton
                android:id="@+id/btnShare"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="12"
                android:contentDescription="Share"
                android:src="@drawable/baseline_share_24"
                tools:src="@drawable/baseline_share_24" />

            </LinearLayout>

    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>