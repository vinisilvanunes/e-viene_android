<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_Foto"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_weight="3"
                android:scaleType="fitCenter"
                android:gravity="start"
                android:layout_gravity="start"
                />

            <TextView
                android:id="@+id/txt_Nome"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="75"
                android:gravity="center_vertical"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/imgConfig"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="10"
                android:contentDescription="Options"
                android:src="@drawable/baseline_more_vert_24"
                tools:src="@drawable/baseline_more_vert_24" />

        </LinearLayout>

        <TextView
            android:id="@+id/txt_Texto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"/>

        <ImageView
            android:id="@+id/img_Image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="360dp"
            android:minHeight="360dp"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">

            <ImageButton
                android:id="@+id/btnLike"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="12"
                app:tint="@color/azulEviene"
                android:contentDescription="Like"
                android:src="@drawable/baseline_thumb_up_24"
                tools:src="@drawable/baseline_thumb_up_24" />

            <ImageButton
                android:id="@+id/btnComment"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="12"
                app:tint="@color/azulEviene"
                android:contentDescription="Comment"
                android:src="@drawable/baseline_comment_24"
                tools:src="@drawable/baseline_comment_24" />

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="52" />

            <ImageButton
                android:id="@+id/btnInfo"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="12"
                app:tint="@color/azulEviene"
                android:contentDescription="Info"
                android:src="@drawable/baseline_info_outline_24"
                tools:src="@drawable/baseline_info_outline_24" />

            <ImageButton
                android:id="@+id/btnShare"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="12"
                android:contentDescription="Share"
                app:tint="@color/azulEviene"
                android:src="@drawable/baseline_share_24"
                tools:src="@drawable/baseline_share_24" />

        </LinearLayout>

    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>